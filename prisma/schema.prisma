// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Popup {
  id                String    @id @default(cuid())
  shop              String
  name              String
  isActive          Boolean   @default(true)
  
  // Rules
  discountType      String?   // "percentage" | "fixed" | "none"
  discountValue     Float?
  discountCode      String?
  autoGenerateCode  Boolean   @default(false)
  hasExpiration     Boolean   @default(false)
  enterShopifyCode  Boolean   @default(false)
  showStickyBar     Boolean   @default(false)
  sidebarWidget     Boolean   @default(false)
  
  // Content
  heading           String?
  description       String?
  emailPlaceholder  String?
  primaryButton     String?
  secondaryButton   String?
  footerText        String?
  
  // Style
  logoUrl           String?
  logoWidth         Int?      @default(35)
  displaySize       String?   @default("standard")
  alignment         String?   @default("center")
  cornerRadius      String?   @default("standard")
  imagePosition     String?   @default("left")
  hideOnMobile      Boolean   @default(false)
  backgroundOnMobile Boolean  @default(false)
  imageUrl          String?
  
  // Analytics
  views             Int       @default(0)
  subscribers       Int       @default(0)
  conversionRate    Float     @default(0)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
