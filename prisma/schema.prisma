// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Popup {
  id                String    @id @default(cuid())
  shop              String
  name              String
  isActive          Boolean   @default(true)
  
  // Multi-step functionality
  isMultiStep       Boolean   @default(false)
  sections          String?   // JSON array of sections with individual design settings
  
  // Rules
  discountType      String?   // "percentage" | "fixed" | "none"
  discountValue     Float?
  discountCode      String?
  autoGenerateCode  Boolean   @default(false)
  hasExpiration     Boolean   @default(false)
  enterShopifyCode  Boolean   @default(false)
  showStickyBar     Boolean   @default(false)
  sidebarWidget     Boolean   @default(false)
  
  // Global content (fallback/default values)
  heading           String?
  description       String?
  emailPlaceholder  String?
  footerText        String?
  customButtons     String?   // JSON array of custom buttons (unified system)
  
  // Global style settings (fallback/default values)
  logoUrl           String?
  logoWidth         Int?      @default(35)
  displaySize       String?   @default("standard")
  alignment         String?   @default("center")
  cornerRadius      String?   @default("standard")
  imagePosition     String?   @default("none")
  hideOnMobile      Boolean   @default(false)
  backgroundOnMobile Boolean  @default(false)
  imageUrl          String?
  
  // Global colors (fallback/default values)
  popupBackground   String?   @default("#FFFFFF")
  textHeading       String?   @default("#000000")
  textDescription   String?   @default("#666666")
  textInput         String?   @default("#000000")
  textConsent       String?   @default("#666666")
  textError         String?   @default("#FF0000")
  textLabel         String?   @default("#000000")
  textFooter        String?   @default("#999999")
  primaryBtnBg      String?   @default("#000000")
  primaryBtnText    String?   @default("#FFFFFF")
  secondaryBtnText  String?   @default("#666666")
  customBtnBg       String?   @default("#E5E5E5")
  customBtnText     String?   @default("#000000")
  stickyBarBg       String?   @default("#FFFFFF")
  stickyBarText     String?   @default("#000000")
  sidebarBg         String?   @default("#000000")
  sidebarText       String?   @default("#FFFFFF")
  
  // Analytics
  views             Int       @default(0)
  subscribers       Int       @default(0)
  conversionRate    Float     @default(0)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
